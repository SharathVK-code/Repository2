<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
	
    <listeners>
        <listener class-name="Automation.TestComponents.Test_Listeners"/>
    </listeners>

    <groups>
        <run>
            <include name="errorHandling"/>
        </run>
    </groups>
	
    <test thread-count="5" name="Error Validations">
        <classes>
            <class name="Automation.Tests.ErrorValidations"/>
        </classes>
    </test>
    
</suite>